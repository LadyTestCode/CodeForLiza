// Online C++ compiler to run C++ program online
#include <iostream>
#include <stdlib.h> // нужен для вызова функций rand(), srand()
#include <time.h> // нужен для вызова функции time()


int main() {
    long n,q,m,t; //число элементов массив
    long time;
    std::cin >> n;
    std::cin >> q;
    std::cin >> m;
    std::cin >> t;
    time = q+n*q;
    if ((m-n*q/t)>0)
      time+=(m-n*q/t)*t;
    time+=t;
    std::cout << time;
    return 0;
}

